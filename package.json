{
  "name": "all-ki-react",
  "version": "2.0.0",
  "description": "All-KI - Ihr smarter Alltagsassistent (Modern Version)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --exec \"node --inspect=0.0.0.0:9229\"",
    "dev:watch": "nodemon server.js --watch src --watch public",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "format": "prettier --write .",
    "build": "echo \"No build step required for this project\"",
    "health": "node -e \"require('http').get('http://localhost:3000/api/health', res => { let data = ''; res.on('data', chunk => data += chunk); res.on('end', () => console.log(JSON.parse(data))); })\"",
    "logs": "npm run dev | bunyan",
    "docker:build": "docker build -t all-ki .",
    "docker:run": "docker run -p 3000:3000 --env-file .env all-ki"
  },
  "keywords": [
    "ki",
    "ai",
    "assistant",
    "dashboard",
    "openai",
    "mongodb",
    "express",
    "nodejs",
    "modern",
    "pwa",
    "responsive"
  ],
  "author": {
    "name": "Lukas Geck",
    "email": "your-email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/all-ki.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/all-ki/issues"
  },
  "homepage": "https://github.com/yourusername/all-ki#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "multer": "^2.0.1",
    "openai": "^4.47.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5"
  },
  "nodemonConfig": {
    "ignore": [
      "node_modules/",
      "public/",
      "*.log"
    ],
    "ext": "js,json,env",
    "env": {
      "NODE_ENV": "development"
    },
    "verbose": true,
    "delay": 1000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
